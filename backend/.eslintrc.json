{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "globals": {
        "logger": true,
        "error": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-unary-ops": [
            "error",
            {
              "words": true,
              "nonwords": false
            }
        ],
        "no-var": "error",
        "prefer-const": "error",
        "comma-dangle": ["error", "never"],
        "object-curly-spacing": ["error", "never"],
        "space-infix-ops": ["error", {"int32Hint": false}],
        "comma-spacing": ["error", {"before": false, "after": true}]
    }
}
