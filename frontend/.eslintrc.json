{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-unary-ops": [
            "error",
            {
              "words": true,
              "nonwords": false
            }
        ],
        "no-var": "error",
        "prefer-const": "error",
        "comma-dangle": ["error", "never"],
        "object-curly-spacing": ["error", "never"],
        "space-infix-ops": ["error", {"int32Hint": false}],
        "comma-spacing": ["error", {"before": false, "after": true}]
    }
}
